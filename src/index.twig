	    		<tr>
	    			<td>3</td>
	    			<td>Denny Wang</td>
	    			<td>2020-03-20 19:00:00</td>
	    			<td>4</td>
	    			<td>
	    				<button class="btn">Log</button>
	    				<button class="btn-primary">Export</button>
	    				<button class="btn-primary">Export</button>
	    				<button class="btn-primary">Export</button>
	    				<button class="btn-primary">Export</button>
	    				<button class="btn-primary">Export</button>
	    			</td>
	    		</tr>
	    	</tbody>
		</table></div></div></div>
		{# contact #}
		<div class="clearfix">
			<div class="float-right link-group-block">
				<ul>
					<li><a href="https://www.facebook.com/FiO.ONE.EN/" target="_blank"><i class="fab fa-facebook-square"></i></a></li>
					<li><a href="mailto:info@fio.one" target="_blank"><i class="fas fa-envelope"></i></a></li>
				</ul>
			</div>
		</div>
	</div></div>
	
