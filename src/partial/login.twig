<div class="center-flexbox content-container-inner" v-if="page === 'login'">
    <div class="row center-xs auth-form"><div class="col-md-12 col-sm-8 col-xs-12 auth-form-inner">
        <div id="form-group-username" class="form-group">
          <input class="form-control" type="text" v-model="username" placeholder="Email" ref="username" require @keyup.enter="login"/>
          <div class="invalid-feedback text-right"></div>
        </div>
        <div class="clearfix">
            <a href="#" class="text-link text-right float-right" @click="goPage('register')">No account? Register here</a>
        </div>
        <div class="submit-area">
            <button class="btn btn-primary submit-btn" type="button" @click="login()">Login</button>
        </div>
    </div></div>
</div>