<div class="content-container-inner" v-if="page === 'dashboard'"><div class="row center-xs">
	<div class="col-md-12 col-xs-12 num-block">
		<p class="title">Number of People Participated Today</p>
		<div class="row between-xs">
			<div class="col-md-8 col-xs-6">
				<p class="num" v-text="overview.total" @click="showLog()" :class="getStatus('total')"></p>
			</div>
			<div class="col-md-3 col-xs-6">
				<a href="#" target="_blank">
					<span class="status-dot wait"><i class="fas fa-circle"></i></span><br>
					Googlesheet link
				</a>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-xs-12 num-block">
		<p class="title">Number of Healthy People</p>
		<div class="row between-xs">
			<div class="col-md-8 col-xs-6">
				<p class="num" v-text="overview.health" @click="showLog()" :class="getStatus('total')"></p>
			</div>
			<div class="col-md-3 col-xs-6">
				<p class="num percent" v-text="toPercent(overview.health, overview.total)" @click="showLog()"></p>
				<p class="help-text">Based on Number of Participants</p>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-xs-12 num-block">
		<p class="title">People with Fever</p>
		<div class="row between-xs">
			<div class="col-md-8 col-xs-6">
				<p class="num" v-text="overview.fever" @click="showLog()" :class="getStatus('fever')"></p>
			</div>
			<div class="col-md-3 col-xs-6">
				<p class="num percent" v-text="toPercent(overview.fever, overview.total)" @click="showLog()"></p>
				<p class="help-text">Based on Number of Participants</p>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-xs-12 num-block">
		<p class="title">People with One or Two Symptoms</p>
		<div class="row between-xs">
			<div class="col-md-8 col-xs-6">
				<p class="num" v-text="overview.warning" @click="showLog()" :class="getStatus('warning')"></p>
			</div>
			<div class="col-md-3 col-xs-6">
				<p class="num percent" v-text="toPercent(overview.warning, overview.total)" @click="showLog()"></p>
				<p class="help-text">Based on Number of Participants</p>
			</div>
		</div>
	</div>
	<div class="col-md-12 col-xs-12 num-block">
		<p class="title">People with More than Three Symptoms</p>
		<div class="row between-xs">
			<div class="col-md-8 col-xs-6">
				<p class="num" v-text="overview.danger" @click="showLog()" :class="getStatus('danger')"></p>
			</div>
			<div class="col-md-3 col-xs-6">
				<p class="num percent" v-text="toPercent(overview.danger, overview.total)" @click="showLog()"></p>
				<p class="help-text">Based on Number of Participants</p>
			</div>
		</div>
	</div>
</div></div>